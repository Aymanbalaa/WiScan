<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:id="@+id/main">

    <TextView
        android:id="@+id/hi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="@string/hi"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/hi_text"
        android:layout_marginTop="32dp">

        <Button
            android:id="@+id/wifi_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:text="@string/wifi"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/ic_wifi"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:lines="2"/>

        <Button
            android:id="@+id/location_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="@string/location"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/ic_location"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:lines="2"/>

        <Button
            android:id="@+id/active_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@android:color/holo_purple"
            android:text="@string/activeActivity"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/ic_active"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:lines="2"/>

        <Button
            android:id="@+id/additional_info_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@android:color/holo_orange_light"
            android:text="@string/additional_information"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/ic_info"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:lines="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/cpuTempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPU Temperature: 59.1Â°C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cpuTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPU Uptime: 2 minutes"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/scanningStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scanning Status: Active"
            android:textSize="18sp" />

    </LinearLayout>
</RelativeLayout>
