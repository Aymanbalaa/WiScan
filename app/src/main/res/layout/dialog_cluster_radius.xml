<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <RadioGroup
        android:id="@+id/radioGroupClusterRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radius_very_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_cluster_very_small" />

        <RadioButton
            android:id="@+id/radius_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_cluster_small" />

        <RadioButton
            android:id="@+id/radius_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_cluster_medium"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radius_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_cluster_large" />
    </RadioGroup>
</LinearLayout>
