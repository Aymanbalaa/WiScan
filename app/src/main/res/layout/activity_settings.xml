<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF"
    android:padding="16dp">

    <TextView
        android:id="@+id/Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="499dp"
        android:text="@string/settingsTitle"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerMetric"
        android:layout_width="263dp"
        android:layout_height="44dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/baseline_arrow"
        android:entries="@array/measurementsArray"
        android:prompt="@string/spinnerPrompt2"
        tools:ignore="DuplicateIds" />

    <Spinner
        android:id="@+id/spinnerLanguage"
        android:layout_width="268dp"
        android:layout_height="44dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/baseline_arrow"
        android:entries="@array/languageArray"
        android:prompt="@string/spinnerPrompt3" />

    <Spinner
        android:id="@+id/spinnerDB"
        android:layout_width="268dp"
        android:layout_height="44dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/baseline_arrow"
        android:entries="@array/databaseArray"
        android:prompt="@string/spinnerPrompt4" />

</RelativeLayout>
